{
	"compilerOptions": {
		"jsx": "preserve",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "esnext",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": false,
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*",
		"index.ts"
	],
	"exclude": [
		"example",
		"node_modules",
		"dist"
	]
}
